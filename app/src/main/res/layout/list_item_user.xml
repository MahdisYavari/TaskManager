<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:elevation="@dimen/cardview_default_elevation"
        android:id="@+id/card_view_user"
        android:layout_height="match_parent"
        app:cardMaxElevation="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#E9DFF1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username:"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#422E49"
                app:layout_constraintLeft_toLeftOf="parent"


                android:layout_margin="24dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/txt_user"
                android:layout_margin="24dp"
                android:textColor="#422E49"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password:"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#422E49"
                android:layout_margin="24dp"
                app:layout_constraintLeft_toRightOf="@id/txt_username"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textColor="#422E49"
                app:layout_constraintLeft_toRightOf="@id/txt_pass"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_count_of_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="count of task:"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#422E49"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txt_count"
                app:layout_constraintTop_toBottomOf="@id/txt_user"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textColor="#422E49"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txt_count_of_task"
                app:layout_constraintTop_toBottomOf="@id/txt_pass" />

            <ImageView
                android:id="@+id/img_delete_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@android:drawable/ic_menu_delete"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>